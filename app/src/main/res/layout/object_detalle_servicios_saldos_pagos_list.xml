<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblConceptoSaldosPagos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fecha limite de pago: "
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"/>
        <TextView
            android:id="@+id/lblCantidadSaldosPagos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="14 de Julio 2016"
            android:layout_weight="1"
            android:gravity="right"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"/>
    </LinearLayout>
</LinearLayout>
