<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:elevation="4dp"
        android:id="@+id/banner"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblCodigoSeridad"
        android:text="@string/lblCodigoSeguridadAviso"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:textSize="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@id/banner"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCodigoSeguridad"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_below="@+id/lblCodigoSeridad"
        android:inputType="textCapCharacters"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:text="@string/btnCrearUsuario"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnEvaluarCodigoSeguridad"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="10dp"
        android:elevation="@dimen/floating_button" />
</RelativeLayout>
