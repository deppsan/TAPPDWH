<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center_vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/liverpool_face"
        android:id="@+id/imgPorgramaLealtad"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|left"
            android:textSize="@dimen/title_default_size"
            android:id="@+id/lblDescripcionProgLealtad"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|left"
            android:textColor="@color/gray"
            android:id="@+id/lblPrecioProgLealtad"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:scaleType="center"
        android:src="@drawable/star_50_fill"
        android:id="@+id/imgFavorito"/>
</LinearLayout>
