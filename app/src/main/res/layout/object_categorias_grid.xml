<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Categoria"
                android:textAlignment="center"
                android:id="@+id/lblMontoActual" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle"
                android:layout_below="@id/lblMontoActual"/>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/lblMontoActual"
                android:id="@+id/circle_fill_area"
                android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/lblMontoActual"
                android:id="@+id/ViewCategoriaImge">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:src="@drawable/dollar_bill"
                    android:id="@+id/imgCategoria"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Categoria"
                android:textAlignment="center"
                android:id="@+id/lblCategoriaNombre"
                android:layout_below="@id/ViewCategoriaImge"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TransGray"
            android:visibility="gone"
            android:id="@+id/ViewCaratula">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="left|top"
                android:id="@+id/frameUp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/grafica"
                    android:id="@+id/imgGrafica"/>
                <ImageView
                    android:id="@+id/imgEliminar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trash"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="right|bottom"
                android:layout_below="@id/frameUp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/edit"
                    android:id="@+id/imgEditar"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
