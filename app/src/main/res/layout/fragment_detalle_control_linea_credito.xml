<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lstControlLineaCredito"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_list"
        android:orientation="horizontal"
        android:id="@+id/btnAumentarLineaCredito">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/SolicitarAumentoLinea"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Menu"/>
        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right_red"/>
    </LinearLayout>
</LinearLayout>
