<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:elevation="4dp"
        android:id="@+id/banner"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:layout_marginBottom="77dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lblAltaUsuario"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:id="@+id/lblFormularioCabecera"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/lblNombreUsuario"
                android:layout_below="@id/lblFormularioCabecera"
                android:id="@+id/lblNombre"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:hint="@string/hintNombreUsuario"
                android:id="@+id/txtNombreUsuario"
                android:layout_below="@id/lblNombre"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_below="@id/txtNombreUsuario"
                android:id="@+id/frameApellidos">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/frameApPaterno"
                    android:layout_below="@id/txtNombreUsuario">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="@string/lblAppPaterno"
                        android:id="@+id/lblAppPaterno"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hintApellidoPaterno"
                        android:textSize="15dp"
                        android:layout_margin="10dp"
                        android:id="@+id/txtApellidoPaterno"
                        android:layout_below="@id/lblAppPaterno"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/frameApMaterno"
                    android:layout_below="@id/txtNombreUsuario">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="@string/lblAppMaterno"
                        android:id="@+id/lblAppMaterno"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hintApellidoMaterno"
                        android:textSize="15dp"
                        android:layout_margin="10dp"
                        android:id="@+id/txtApellidoMaterno"
                        android:layout_below="@+id/lblAppMaterno"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameApellidos"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/lblUsuario"
                android:text="@string/lblUsuario"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintUsuarioFormulario"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:id="@+id/txtUsuarioFormulario"
                android:layout_below="@+id/lblUsuario"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtUsuarioFormulario"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/lblContraseñaFormulario"
                android:text="@string/lblContraseñaFormulario"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintContraseñFormulario"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:id="@+id/txtContraseñaFromulario"
                android:layout_below="@+id/lblContraseñaFormulario"
                android:inputType="textPassword"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtContraseñaFromulario"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/blConfirmaContraseña"
                android:text="@string/lblConfirmarContraseña"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:id="@+id/txtConfirmaContraseña"
                android:layout_below="@+id/blConfirmaContraseña"
                android:inputType="textPassword"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtConfirmaContraseña"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/lblCorreo"
                android:text="@string/lblCorreoElectronico"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintCorreoElectronico"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:id="@+id/txtCorreoFromulario"
                android:layout_below="@+id/lblCorreo"
                android:inputType="textEmailAddress"/>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:text="@string/btnCrearUsuario"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnCrearUsuario"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        android:layout_margin="8dp"/>
</RelativeLayout>
